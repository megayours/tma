            },
            {
              "key": "Pragma",
              "value": "no-cache"
            },
            {
              "key": "Expires",
              "value": "0"
            }
          ]
        }
      ],
      "rewrites": [
        {
          "source": "!/@(assets|backgrounds|gifs|lib|lotties|nfts)/**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}
